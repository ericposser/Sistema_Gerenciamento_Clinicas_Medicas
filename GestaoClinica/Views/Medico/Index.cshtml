@model IEnumerable<GestaoClinica.Models.Medico>

@{
    ViewData["Title"] = "Médicos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Lista de Médicos</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Novo Médico
    </a>
</div>

<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Buscar por nome..." />
    </div>
    <div class="col-md-auto">
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle shadow-sm bg-white rounded">
        <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th>@Html.DisplayNameFor(model => model.First().CRM)</th>
            <th>@Html.DisplayNameFor(model => model.First().Telefone)</th>
            <th class="text-center" style="width: 150px;">Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.CRM</td>
                <td>@item.Telefone</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>