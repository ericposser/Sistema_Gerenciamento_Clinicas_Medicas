@model GestaoClinica.Models.Medico

@{
    ViewData["Title"] = "Excluir Médico";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body">
                    <h4 class="card-title text-center fw-bold text-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmação de Exclusão
                    </h4>

                    <p class="text-center fs-5 mb-4">Tem certeza que deseja excluir este médico?</p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">Nome</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4 fw-semibold">CRM</dt>
                        <dd class="col-sm-8">@Model.CRM</dd>

                        <dt class="col-sm-4 fw-semibold">Telefone</dt>
                        <dd class="col-sm-8">@Model.Telefone</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Excluir Médico
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Cancelar e voltar à lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>