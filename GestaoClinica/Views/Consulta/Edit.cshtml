@model GestaoClinica.Models.Consulta

@{
    ViewData["Title"] = "Editar Consulta";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body">
                    <h4 class="card-title text-center fw-bold mb-4">Editar Consulta</h4>

                    <form asp-action="Edit" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="DataHora" class="form-label fw-semibold"></label>
                            <input asp-for="DataHora" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DataHora" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observacoes" class="form-label fw-semibold"></label>
                            <input asp-for="Observacoes" class="form-control" placeholder="Observações clínicas..." />
                            <span asp-validation-for="Observacoes" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ValorConsulta" class="form-label fw-semibold"></label>
                            <input asp-for="ValorConsulta" class="form-control" id="valorConsulta" placeholder="Ex: 250,00" />
                            <span asp-validation-for="ValorConsulta" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PacienteId" class="form-label fw-semibold"></label>
                            <select asp-for="PacienteId" class="form-select" asp-items="ViewBag.PacienteId">
                                <option value="">Selecione um paciente</option>
                            </select>
                            <span asp-validation-for="PacienteId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MedicoId" class="form-label fw-semibold"></label>
                            <select asp-for="MedicoId" class="form-select" asp-items="ViewBag.MedicoId">
                                <option value="">Selecione um médico</option>
                            </select>
                            <span asp-validation-for="MedicoId" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Salvar Alterações
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Voltar à lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/imask"></script>
    <script>
        var valorInput = document.getElementById('valorConsulta');

        if (valorInput) {
            IMask(valorInput, {
                mask: Number,
                scale: 2,
                signed: false,
                thousandsSeparator: '.',
                padFractionalZeros: true,
                normalizeZeros: true,
                radix: ',',
                mapToRadix: ['.']
            });
        }
    </script>
}